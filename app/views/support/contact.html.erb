<h1>Contact Us</h1>

<%= form_tag("/support") %>
    <%= label_tag(:name, "Your Name:") %>
    <%= text_field_tag(:name) %>
    <br>
    <%= label_tag(:email, "Your Email:") %>
    <%= email_field(:email, :user) %>
    <br>
    <%= label_tag(:reason, "Reason for Contact:") %>
    <br>
    <%= text_area_tag(:reason, "", size: "50x10") %>
    <br>
    <br>
    <%= submit_tag("Submit") %>
